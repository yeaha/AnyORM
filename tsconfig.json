{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./built",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "newLine": "LF",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}