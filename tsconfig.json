{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDirs": [
            "./src",
            "./tests"
        ],
        "outDir": "./build",
        "target": "es2017",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "pretty": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "newLine": "LF",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
